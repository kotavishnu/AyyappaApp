<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/scrollView"
    android:fillViewport="false"
    android:background="@drawable/bk3"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
  android:orientation="vertical" >

        <fragment
        android:name="in.eloksolutions.ayyappa.ayyappapp.fragments.CarousalFragment"
        android:id="@+id/fragment_place"
        android:layout_width="match_parent"

        android:layout_height="wrap_content" />





        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:paddingBottom="20dp"
            android:elevation="5dp"
            card_view:cardCornerRadius="10dp"
            card_view:cardUseCompatPadding="true"
            >
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tvDeeksha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Deeksha"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />
                <TextView
                    android:id="@+id/tvDays"
                    android:layout_below="@id/tvDeeksha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp"
                    />
            <ImageView
                android:id="@+id/imgDeeksha"
                android:gravity="center"
                android:layout_below="@id/tvDays"
                android:src="@drawable/my_deeksha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                />

</RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:paddingBottom="20dp"
            android:elevation="5dp"
            card_view:cardCornerRadius="10dp"
            card_view:cardUseCompatPadding="true"
            >
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal" android:id="@+id/lLayout">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="left"
                android:text="Ayyappa Bhakti Songs"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/ivFull"
                android:layout_alignRight="@+id/textView"
                android:layout_alignEnd="@+id/textView"
                android:gravity="right"
                android:src="@drawable/full_screen"/>
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:gravity="center_horizontal"
                android:layout_below="@+id/lLayout"
                android:orientation="horizontal" android:id="@+id/imgPlayer">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ibprev"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:paddingRight="20dp"
                    android:src="@drawable/previous"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ibplay"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:paddingRight="20dp"
                    android:src="@drawable/play"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ibnext"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:paddingRight="20dp"
                    android:src="@drawable/next"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvSongName"
                android:layout_below="@id/imgPlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:text="Maladharanam Niyamala Toranam.mp3"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />
            <android.support.v7.widget.RecyclerView
                android:layout_below="@id/tvSongName"
                android:id="@+id/rvSongs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:scrollbars="vertical"/>

        </RelativeLayout>
</android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_view4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:elevation="10dp"
            card_view:cardCornerRadius="5dp">
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tvEvents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:text="Padi Puja Events"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />
                <ImageView
                    android:id="@+id/imgCreatePadi"
                    android:layout_below="@id/tvEvents"
                    android:layout_gravity="center"
                    android:src="@drawable/create_padi"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"/>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvPadi"
                    android:layout_below="@id/imgCreatePadi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:elevation="10dp"
            card_view:cardCornerRadius="5dp">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
            android:id="@+id/tvContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="left"
            android:text="My Swamy Contacts"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />
        <ImageView
            android:id="@+id/imgInvite"
            android:layout_below="@id/tvContacts"
            android:layout_gravity="center"
            android:src="@drawable/invite_friends"
            android:layout_width="wrap_content"
            android:layout_height="120dp"/>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvContacts"
                android:layout_below="@id/imgInvite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"/>
</RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_view3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:elevation="10dp"
            card_view:cardCornerRadius="5dp">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
            android:id="@+id/tvMovies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="left"
            android:text="Swamy Ayyappa Mahathyam Movies"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_below="@id/tvMovies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"/>

</RelativeLayout>
</android.support.v7.widget.CardView>


    </LinearLayout>
</ScrollView>