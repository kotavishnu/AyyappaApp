<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scroll">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="cards main container"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Deeksha Shedule"
            android:textColor="#90c40909"
            android:textSize="33dp"
            android:textStyle="bold" />
       <android.support.v7.widget.CardView
            android:id="@+id/card_view1"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            card_view:cardCornerRadius="0dp"
            card_view:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="12dp"
                android:layout_weight="2">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:id="@+id/date"
                    android:text="From Date"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="start"
                    android:layout_alignParentLeft="true"/>
                <ImageView
                    android:id="@+id/fIcon"
                    android:layout_width="15dp"
                    android:gravity="center_vertical"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_date"
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/date"/>
                <TextView
                    android:id="@+id/fdate"
                    android:layout_toRightOf="@+id/fIcon"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="12-12-2016"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textSize="14dp"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/card_view11"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            card_view:cardCornerRadius="0dp"
            card_view:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="12dp"
                android:layout_weight="2">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:id="@+id/tdate"
                    android:text="To Date"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="start"
                    android:layout_alignParentLeft="true"/>
                <ImageView
                    android:id="@+id/tIcon"
                    android:layout_width="15dp"
                    android:gravity="center_vertical"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_date"
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/tdate"/>
                <TextView
                    android:id="@+id/txtdate"
                    android:layout_toRightOf="@+id/tIcon"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="12-12-2016"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textSize="14dp"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:id="@+id/card_view5"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            card_view:cardCornerRadius="0dp"
            card_view:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2">
                <ImageView
                    android:id="@+id/descIocn"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="icon"
                    android:src="@drawable/description"
                    android:textSize="14dp"/>
                <EditText
                    android:id="@+id/description"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:layout_toRightOf="@+id/descIocn"
                    android:hint="Description"
                    android:textSize="14dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view7"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            card_view:cardCornerRadius="0dp"
            card_view:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/schedule"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>